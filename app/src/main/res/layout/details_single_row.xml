<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="#ab172c41"
    app:cardElevation="0dp"
    android:clickable="true"
    android:layout_margin="3dp"
    android:foreground="?selectableItemBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/datelin"
            android:background="#ab172c41"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#e3edef"
                android:textStyle="bold"
                android:text="Wed"
                android:layout_marginLeft="5dp"

                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textColor="#dedede"
            android:textSize="15sp"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/datelin"
            android:text="Clear Sky"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_marginTop="3dp"
            android:layout_below="@+id/datelin"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/wind"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="#dedede"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/description"
            android:text="wind"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/pressure"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="#dedede"
            android:layout_below="@id/wind"
            android:text="Clear Sky"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/humidity"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="#dedede"
            android:layout_below="@id/pressure"
            android:text="Clear Sky"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#dedede"
            android:layout_below="@+id/imageView"
            android:text="30C"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:gravity="center_vertical|right"
            android:layout_alignBottom="@+id/humidity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:gravity="center_vertical"
            android:layout_below="@id/temperature"
            android:orientation="horizontal"
            android:layout_alignRight="@id/temperature">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:background="@drawable/down"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/tmax"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20c"

                android:textColor="#dedede"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/up"
                />
            <TextView
                android:id="@+id/tmin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20c"

                android:textColor="#dedede"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>